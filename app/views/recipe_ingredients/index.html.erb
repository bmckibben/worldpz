<p id="notice"><%= notice %></p>

<h1>Recipe Ingredients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ingredient name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_ingredients.each do |recipe_ingredient| %>
      <tr>
        <td><%= link_to recipe_ingredient.ingredient_name %></td>
        <td><%= link_to recipe_ingredient  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= edit_recipe_ingredient_path(recipe_ingredient) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to recipe_ingredient, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>  

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_recipe_ingredient_path,  class: "btn btn-primary" %>
