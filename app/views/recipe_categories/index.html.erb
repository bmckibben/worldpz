

<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Category name</th>
      <th colspan="3"><%= link_to 'New Recipe category', new_recipe_category_path,  class: "btn btn-primary  pull-right" %></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_categories.each do |recipe_category| %>
      <tr>
        <td><%= recipe_category.id %></td>
        <td><%= recipe_category.category_name %></td>
        <td><%= link_to recipe_category  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_recipe_category_path(recipe_category) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to recipe_category, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>        
      </tr>
    <% end %>
  </tbody>
</table>


