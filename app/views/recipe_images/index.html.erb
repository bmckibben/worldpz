<p id="notice"><%= notice %></p>

<h1>Recipe Images</h1>

<table class="table">
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Image url</th>
      <th colspan="3"><%= link_to 'New Recipe image', new_recipe_image_path,  class: "btn btn-primary  pull-right" %> </th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_images.each do |recipe_image| %>
      <tr>
        <td><%= recipe_image.recipe_id %></td>
        <td><%= recipe_image.image_url %></td>
        <td><%= link_to recipe_image  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_recipe_image_path(recipe_image) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to recipe_image, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>

      </tr>
    <% end %>
  </tbody>
</table>



