  </div>
  <div class="col-md-8 col-xs-12 field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, style: "width:100%" %>
  </div>
</div>  

  <div class="col-md-12 actions">
    <%= link_to 'Show', @recipe_image,  class: "btn btn-default  pull-right" %>
