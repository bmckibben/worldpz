<li>
  <%= blog_comment.body %> -
  <small>Submitted <%= time_ago_in_words(blog_comment.created_at) %> ago</small>

  <%= form_for [blog_comment, BlogComment.new] do |f| %>
  	<div class="input-group">
      	<%= f.text_area :body, placeholder: "Post a Reply", class: "form-control" %>
  		<span class="input-group-btn">
  			<%= f.submit "Post", class: "btn btn-default text-area-input-btn"  %>
  		</span>	      	
    </div>  	
      
  <% end %>

  <ul>
      <%= render partial: 'blog_comments/blog_comment', collection: blog_comment.blog_comments %>
  </ul>

</li>