<div class="row">
<div class="col-md-6 col-md-offset-3 col-xs-12">

<h1>Listing Blog Comments</h1>
<hr style="width:100%">
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Publish</th>
      <th>Body</th>
      <th>Parent</th>
      <th>Commentable type</th>
      <th colspan="3"><%= link_to 'New Comment', new_blog_comment_path, class: "btn btn-primary pull-right" %></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_comments.each do |blog_comment| %>
      <tr>
        <td><%= blog_comment.id %></td>
        <td><i class="fa fa-circle <%= (blog_comment.publish==0) ? 'red' : 'green'  %>" aria-hidden="true"></i></td>
        <td><%= blog_comment.body %></td>
        <td><%= blog_comment.commentable_id %></td>
        <td><%= blog_comment.commentable_type %></td>
        <td><%= link_to blog_comment  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_blog_comment_path(blog_comment) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to blog_comment, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>         
      </tr>
    <% end %>
  </tbody>
</table>






</div>
</div>  