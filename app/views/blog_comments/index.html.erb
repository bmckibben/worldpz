<div class="row">
<div class="col-md-6 col-md-offset-3 col-xs-12">

<h1>Listing Blog Comments</h1>
<hr style="width:100%">
<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Commentable</th>
      <th>Commentable type</th>
      <th>Publish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_comments.each do |blog_comment| %>
      <tr>
        <td><%= blog_comment.body %></td>
        <td><%= blog_comment.commentable_id %></td>
        <td><%= blog_comment.commentable_type %></td>
        <td><%= blog_comment.publish %></td>
        <td><%= link_to 'Show', blog_comment %></td>
        <td><%= link_to 'Edit', edit_blog_comment_path(blog_comment) %></td>
        <td><%= link_to 'Destroy', blog_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog comment', new_blog_comment_path %>


</div>
</div>  