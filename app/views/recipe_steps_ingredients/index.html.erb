<p id="notice"><%= notice %></p>

<h1>Step Ingredients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Step</th>
      <th>Ingredient</th>
      <th>Step ingredient quantity</th>
      <th>Ingredient units</th>
      <th colspan="3"><%= link_to 'New Recipe steps ingredient', new_recipe_steps_ingredient_path,  class: "btn btn-primary"  %></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_steps_ingredients.each do |recipe_steps_ingredient| %>
      <tr>
        <td><%= recipe_steps_ingredient.step_id %></td>
        <td><%= recipe_steps_ingredient.ingredient_id %></td>
        <td><%= recipe_steps_ingredient.step_ingredient_quantity %></td>
        <td><%= recipe_steps_ingredient.ingredient_units_id %></td>

        <td><%= link_to recipe_steps_ingredient  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_recipe_steps_ingredient_path(recipe_steps_ingredient) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to recipe_steps_ingredient, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>        
      </tr>
    <% end %>
  </tbody>
</table>




