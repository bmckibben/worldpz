<div class="row">
<div class="col-md-6 col-md-offset-3 col-xs-12">

<h1><%= @blog.title %></h1>
<hr style="width:100%">

<p>
  <strong>Body:</strong>
  <%= @blog.body %>
</p>

<small>Submitted <%= time_ago_in_words(@blog.created_at) %> ago</small>

<h3>Comments</h3>

<%= form_for [@blog, BlogComment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render(partial: 'blog_comments/blog_comment', collection: @blog.blog_comments) %>
</ul>

</div>
</div>