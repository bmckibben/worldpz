<div class="row">
<div class="col-md-6 col-md-offset-3 col-xs-12">
<h1>Listing Blogs</h1>
<hr style="width:100%">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Publish</th>
      <th>Created</th>
      <th>Updated</th>
      <th colspan="3"><%= link_to 'New Blog', new_blog_path, class: "btn btn-primary pull-right" %></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= blog.publish %></td>
        <td><%= blog.created_at %></td>
        <td><%= blog.updated_at %></td>
        <td><%= link_to blog  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_blog_path(blog) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to blog, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>