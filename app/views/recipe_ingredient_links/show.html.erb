<div class="row">
<div class="col-md-6 col-md-offset-3 col-xs-12">
  <h1>Recipe Ingredient Link</h1>
	<hr style="width:100%">
	<div class="row">

		<div class="col-md-12">
			<h2>
			  <%= @recipe_ingredient_link.recipe_id %> : <%= @recipe_ingredient_link.recipe.recipe_name rescue "What name?" %>
			</h2>

			<p>
			  <strong>Recipe ingredient:</strong>
			  <%= @recipe_ingredient_link.recipe_ingredient_id %>
			</p>

			<p>
			  <strong>Ingredient quantity:</strong>
			  <%= @recipe_ingredient_link.ingredient_quantity %>
			</p>

			<p>
			  <strong>Recipe ingredient units:</strong>
			  <%= @recipe_ingredient_link.recipe_ingredients_unit_id %>
			</p>

		</div>

	</div>
	<%= link_to 'Close', recipe_ingredient_links_path, class: "btn btn-primary pull-right" %>
</div>
</div>