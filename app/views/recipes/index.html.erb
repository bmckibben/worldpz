

<h1>Recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Recipe name</th>
      <th>Active</th>
      <th>Recipe description</th>
      <th>Sort</th>
      <th>Prep Time</th>
      <th>Cook Time</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th colspan="3"><%= link_to 'New Recipe', new_recipe_path,  class: "btn btn-primary" %></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.category_id %></td>
        <td><%= recipe.recipe_name %></td>
        <td><i class="fa fa-circle <% if recipe.active==0 ? "red" : "green" %>" aria-hidden="true"></i></td>
        <td><%= recipe.recipe_description.html_safe %></td>
        <td><%= recipe.sort_order %></td>
        <td><%= recipe.prep_minutes %></td>
        <td><%= recipe.cook_minutes %></td>
        <td><%= recipe.created_at %></td>
        <td><%= recipe.updated_at %></td>
        <td><%= link_to recipe  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_recipe_path(recipe) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to recipe, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>



