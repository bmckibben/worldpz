<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-2 col-xs-12 field">
    <%= f.label :category_id %><br>
    <%= collection_select(:category_id, 0, RecipeCategory.all, :id, :category_name, {selected: @recipe.category_id}) %>
  </div>
  <div class="col-md-10 col-xs-12 field">
    <%= f.label :recipe_name %><br>
    <%= f.text_field :recipe_name, style: "width: 100%"  %>
  </div>
</div>

<div class="row">  
  <div class="col-xs-12 field">
    <%= f.label :recipe_description %><br>
    <%= f.text_area :recipe_description, class: "recipe-description"%>
  </div>
  <div class="col-xs-12 actions">
    <%= link_to 'Show Recipe', @recipe,  class: "btn btn-default  pull-right" %> 
    <%= link_to 'Recipe List', recipes_path, class: "btn btn-default  pull-right" %>

    <%= f.submit class: "btn btn-primary pull-right" %>

  </div>
</div>  
<% end %>


