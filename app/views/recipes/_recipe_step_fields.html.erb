<div class="row fields">
  <div class="col-md-2 col-xs-12 field">
    <%= f.label "Order" %><br>
    <%= f.number_field :step_order, class: "form-control" %>
    
  </div>
  <div class="col-md-9 col-xs-12 field">
    <%= f.label "Instruction" %><br>
    <%= f.text_area :step_instruction, class: "recipe-description form-control", style: "width:90%" %>
  </div>  
  <div class="col-md-1 col-xs-12 field">
    <%= link_to_remove_fields "", f %>
  </div>  
</div>     