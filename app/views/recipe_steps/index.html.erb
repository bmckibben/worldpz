<h1>Recipe Steps</h1>

<table class="table">
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Step order</th>
      <th>Step instruction</th>
      <th colspan="3"><%= link_to 'New Step', new_recipe_step_path,  class: "btn btn-primary" %></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_steps.each do |recipe_step| %>
      <tr>
        <td><%= recipe_step.recipe_id %></td>
        <td><%= recipe_step.step_order %></td>
        <td><%= recipe_step.step_instruction %></td>

        <td><%= link_to recipe_step  do %><i aria-hidden="false" class="glyphicon glyphicon-eye-open"></i><% end %></td>
        <td><%= link_to edit_recipe_step_path(recipe_step) do %><i aria-hidden="false" class="glyphicon glyphicon-pencil"></i><% end %></td>
        <td><%= link_to recipe_step, method: :delete, data: { confirm: 'Are you sure?' } do %><i aria-hidden="false" class="glyphicon glyphicon-trash"></i><% end %></td>          
      </tr>
    <% end %>
  </tbody>
</table>




