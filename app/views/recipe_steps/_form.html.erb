<%= form_for(@recipe_step) do |f| %>
  <% if @recipe_step.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe_step.errors.count, "error") %> prohibited this recipe_step from being saved:</h2>

      <ul>
      <% @recipe_step.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-4 col-xs-12 field">
    <%= f.label :recipe_id %><br>
    <%= f.collection_select :recipe_id, Recipe.all, :id, :recipe_name %>
  </div>
  <div class="col-md-8 col-xs-12 field">
    <%= f.label :step_order %><br>
    <%= f.number_field :step_order %>
  </div>
</div>

<div class="row">  
  <div class="col-xs-12 field">
    <%= f.label :step_instruction %><br>
    <%= f.text_area :step_instruction, class: "recipe-description"%>
  </div>
  <div class="col-xs-12 actions">
    <%= link_to 'Show', @recipe_step,  class: "btn btn-default  pull-right" %> 
    <%= link_to 'Back', recipe_steps_path, class: "btn btn-default  pull-right" %>

    <%= f.submit class: "btn btn-primary pull-right" %>

  </div>
</div> 

<% end %>
